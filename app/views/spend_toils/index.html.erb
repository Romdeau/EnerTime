<h1>Listing spend_toils</h1>

<table>
  <thead>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-3"></div>
      <div class="col-sm-3"></div>
    </div>
  </div>

  <tbody>
    <% @spend_toils.each do |spend_toil| %>
      <div class="row">
        <div class="col-sm-3"><%= link_to 'Show', spend_toil, class: "btn btn-xs btn-info" %></div>
        <div class="col-sm-3"><%= link_to 'Edit', edit_spend_toil_path(spend_toil), class: "btn btn-xs btn-info" %></div>
        <div class="col-sm-3"><%= link_to 'Destroy', spend_toil, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Spend toil', new_spend_toil_path, class: "btn btn-sm btn-primary" %>
