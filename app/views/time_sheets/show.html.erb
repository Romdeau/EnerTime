<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Time Sheet for <%= format_name(@time_sheet.user.email) %></h1>
  <h3><%= @time_sheet.start_date.strftime("%A the #{@time_sheet.start_date.day.ordinalize} of %B") %> - <%= @time_sheet.end_date.strftime("%A the #{@time_sheet.start_date.day.ordinalize} of %B, %Y") %></h3>
</div>

<div id="content">
  <div class="paragraph">
    <p>
      <%= render 'timesheet_summary' %>
    </p>
    <div class="btn-group">
      <%= link_to 'New Day', new_time_sheet_time_day_path(@time_sheet), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Edit', edit_time_sheet_path(@time_sheet), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Back', time_sheets_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>
